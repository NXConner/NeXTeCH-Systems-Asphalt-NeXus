// --- Sidebar Constants ---
const SIDEBAR_COOKIE_NAME = "sidebar:state"
const SIDEBAR_COOKIE_MAX_AGE = 60 * 60 * 24 * 7 // 7 days
const SIDEBAR_WIDTH = "16rem"
const SIDEBAR_WIDTH_MOBILE = "18rem"
const SIDEBAR_WIDTH_ICON = "3rem"
const SIDEBAR_KEYBOARD_SHORTCUT = "b"

// --- Sidebar Context and Hooks ---

// FIX: Renamed type to avoid conflict with context instance.
type SidebarContextType = {
  state: "expanded" | "collapsed"
  open: boolean
  setOpen: (open: boolean) => void
  openMobile: boolean
  setOpenMobile: (open: boolean) => void
  isMobile: boolean
  toggleSidebar: () => void
}

// FIX: The context was declared twice. It's now declared once with the correct type.
const SidebarContext = React.createContext<SidebarContextType | null>(null)

/**
 * Manages the open/closed state of the sidebar for both mobile and desktop.
 * @param {boolean} defaultOpen - The default state of the sidebar.
 */
function useSidebarState(defaultOpen = true) {
  const [openMobile, setOpenMobile] = React.useState(false)
  const [open, setOpen] = React.useState(defaultOpen)
  const isMobile = useIsMobile()

  const toggleSidebar = React.useCallback(() => {
    isMobile ? setOpenMobile((v) => !v) : setOpen((v) => !v)
  }, [isMobile])

  return {
    state: open ? "expanded" : "collapsed",
    open,
    setOpen,
    isMobile,
    openMobile,
    setOpenMobile,
    toggleSidebar,
  }
}

