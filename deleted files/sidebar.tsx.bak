/**
 * A simple utility for conditionally joining class names.
 * @param {...(string | undefined | null | boolean)} inputs - The class names to join.
 * @returns {string} The combined class names.
 */
function cn(...inputs: (string | undefined | null | boolean)[]): string {
  return inputs.filter(Boolean).join(" ")
}

/**
 * A custom hook to check if the screen is mobile-sized.
 * @returns {boolean} True if the screen width is less than 768px.
 */
const useIsMobile = (): boolean => {
  const [isMobile, setIsMobile] = React.useState(false)

  React.useEffect(() => {
    const checkScreenSize = () => {
      setIsMobile(window.innerWidth < 768)
    }
    checkScreenSize()
    window.addEventListener("resize", checkScreenSize)
    return () => window.removeEventListener("resize", checkScreenSize)
  }, [])

  return isMobile
}

